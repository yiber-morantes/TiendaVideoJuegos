}

<h2>Eliminar Prestamo</h2>

<h3>Estas seguro que deseas elimirnar un prestamo?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.usuario.UsuarioNombre)
